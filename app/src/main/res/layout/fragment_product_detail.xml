    <com.example.nidatazeen.shoppingadviser1.SegmentedRadioGroup
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:id="@+id/segment_text"
        android:checkedButton="@+id/descriptionRadiobutton"
        android:focusable="true"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/gridView"
        >

        <RadioButton
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:id="@+id/descriptionRadiobutton"
            android:text="Description"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:button="@null"
            android:gravity="center"
            android:layout_marginTop="0dp"
            android:textColor="#01A9DB"
            android:layout_below="@+id/tagTextView"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:checked="true" />
        <RadioButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/additionalInfoRadioButton"
            android:text="Additional Info"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginTop="0dp"
            android:button="@null"
            android:gravity="center"
            android:textColor="#01A9DB"
            android:layout_gravity="center_vertical"
            android:checked="false" />
        <RadioButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/productEnquiryRadioButton"
            android:text="Product Enquiry"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:button="@null"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:textColor="#01A9DB"
            android:layout_gravity="center_vertical"
            android:checked="false" />

        <RadioButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/sellerInfoRadioButton"
            android:text="Seller Info"
            android:layout_marginTop="0dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:button="@null"
            android:gravity="center"
            android:textColor="#01A9DB"
            android:layout_gravity="center_vertical"
            android:checked="false" />



    </com.example.nidatazeen.shoppingadviser1.SegmentedRadioGroup>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="5"
        android:id="@+id/editText"
        android:layout_below="@+id/priceTextView"
        android:layout_toEndOf="@+id/qtyTextView" />
