        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:inputType="phone"-->
        <!--android:ems="5"-->
        <!--android:id="@+id/editText"-->
        <!--android:layout_below="@+id/priceTextView"-->
        <!--android:layout_toEndOf="@+id/qtyTextView" />-->
    <!--</ScrollView>-->
</RelativeLayout>
        </LinearLayout>
    </ScrollView>
