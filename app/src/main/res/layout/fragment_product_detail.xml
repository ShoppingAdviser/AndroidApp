    <ImageView
        android:layout_marginLeft="0dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/sample_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:id="@+id/productImageViewLarge"
        android:layout_alignParentTop="true"/>
    <!--android:layout_alignParentEnd="true"-->
    <!--android:layout_marginEnd="156dp" -->


    <TextView
        android:layout_width="wrap_content"
        android:layout_marginRight="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="FTrendy Off White Anaarkali"
        android:id="@+id/titletextview"
        android:layout_marginLeft="0dp"
        android:layout_toEndOf="@+id/productImageViewLarge" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sold By:FTrendy"
        android:id="@+id/soldbytextview"
        android:paddingRight="0dp"
        android:layout_below="@+id/titletextview"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/titletextview" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:paddingRight="0dp"
        android:numStars="5"
        android:layout_below="@+id/soldbytextview"
        android:layout_alignStart="@+id/soldbytextview"
        android:layerType="hardware"/>

    <TextView
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:layout_alignLeft="@+id/ratingBar"
        android:layout_below="@+id/ratingBar" />

    <TextView
        android:id="@+id/priceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs.2,999"
        android:textSize="18sp"
        android:layout_alignStart="@+id/rating"
        android:layout_below="@+id/rating"/>
    <TextView
        android:id="@+id/discountPriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs.1,793"
        android:textSize="18sp"
        android:layout_marginLeft="275dp"
        android:layout_below="@+id/rating"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_marginTop="30dp"
        android:text="Qty"
        android:id="@+id/qtyTextView"
        android:layout_below="@+id/rating"
        android:layout_alignStart="@+id/rating" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buy Now"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="200dp"
        android:id="@+id/buyNowbtn"
        android:layout_below="@+id/qtyTextView"
        android:background="#157cf9"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="SKU:3e42w4"
        android:layout_marginTop="10dp"
        android:id="@+id/sku"
        android:layout_below="@+id/buyNowbtn"
        android:layout_alignStart="@+id/qtyTextView"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Category:Indian Dress"
        android:layout_marginTop="0dp"
        android:id="@+id/categoryTextView"
        android:layout_below="@+id/sku"
        android:layout_alignStart="@+id/sku"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Tag:Women"
        android:id="@+id/tagTextView"
        android:layout_below="@+id/categoryTextView"
        android:layout_alignStart="@+id/categoryTextView"
        android:layout_marginBottom="0dp"
        />

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/productImageViewLarge"
        android:numColumns="5"
        android:verticalSpacing="0dp"
        android:horizontalSpacing="10dp"
        android:id="@+id/gridView"></GridView>





