<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.tls.sampletwo.CartActivityFragment"
        tools:showIn="@layout/activity_cart">

        <ImageView
            android:layout_marginLeft="0dp"
            android:layout_marginRight="5dp"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:id="@+id/cartproductImage"
            android:layout_alignParentTop="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginRight="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="FTrendy Off White Anaarkali"
            android:id="@+id/carttitletextview"
            android:layout_marginLeft="60dp"
            android:layout_toEndOf="@+id/cartproductImage" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="SKU :"
            android:layout_marginTop="15dp"
            android:id="@+id/cartsku"
            android:layout_below="@+id/carttitletextview"
            android:layout_alignStart="@+id/carttitletextview"
            />

      <!--  <TextView
            android:id="@+id/cartpriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:text="Price : Rs.1,793"
            android:textSize="18sp"
            android:layout_below="@+id/cartsku"
            android:layout_alignParentStart="true" />-->



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Total : Rs.1,793"
            android:id="@+id/carttotalTextView"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/cartsku"
            android:layout_alignParentStart="true" />




        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ContinueShopping"
            android:id="@+id/cartcontinueButton"
            android:layout_marginTop="31dp"

            android:layout_below="@+id/carttotalTextView" />
       <!--     android:layout_toStartOf="@+id/cartsoldbytextview" /> -->

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Checkout"
            android:id="@+id/cartcheckoutButton"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="200dp"
            android:layout_below="@+id/carttotalTextView" />
     <!--       android:layout_toEndOf="@+id/cartStateTextView" />-->



    </RelativeLayout>
</ScrollView>